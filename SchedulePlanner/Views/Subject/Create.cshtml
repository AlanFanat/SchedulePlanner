@model SubjectViewModel

@{
    ViewData["Title"] = "Создать предмет";
}

<h2>Создать предмет</h2>

<form asp-controller="Subject" asp-action="Create" method="post">
    <input type="hidden" asp-for="PeriodId" value="@Model.PeriodId" />

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" type="text" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Color" class="form-label"></label>
        <input asp-for="Color" class="form-control" type="color" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Создать" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form> 