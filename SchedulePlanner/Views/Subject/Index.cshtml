@model IEnumerable<SubjectViewModel>

@{
    ViewData["Title"] = "Предметы";
}

<div class="container">
    <h1>Предметы</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Добавить новый предмет</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span style="color: @item.Color">@item.Name</span>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 