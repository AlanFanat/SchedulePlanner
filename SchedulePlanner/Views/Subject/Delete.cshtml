@model SubjectViewModel

@{
    ViewData["Title"] = "Удалить предмет";
}

<div class="container">
    <h1>Удалить предмет</h1>

    <h3>Вы уверены, что хотите удалить этот предмет?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Название
            </dt>
            <dd class="col-sm-10">
                <span style="color: @Model.Color">@Model.Name</span>
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-primary">Назад к списку</a>
        </form>
    </div>
</div> 