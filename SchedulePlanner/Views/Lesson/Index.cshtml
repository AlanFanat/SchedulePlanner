@model LessonViewModel

@{
    ViewData["Title"] = "Информация о занятии";
}

<div class="container my-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h5 class="card-title mb-0">Информация о занятии</h5>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Предмет</strong>
                    <span>@Model.SubjectName</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Тип занятия</strong>
                    <span>@Model.LessonType</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Периодичность</strong>
                    <span>@Model.RecurrenceType</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Дата первого занятия</strong>
                    <span>@Model.StartDate.ToShortDateString()</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Дата последнего занятия</strong>
                    <span>@Model.EndDate.ToShortDateString()</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Количество занятий</strong>
                    <span>@Model.RepeatsCount</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Начало занятия</strong>
                    <span>@Model.StartTime</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Конец занятия</strong>
                    <span>@Model.EndTime</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Длительность</strong>
                    <span>@Model.DurationMinutes минут</span>
                </li>
            </ul>
        </div>
        <div class="card-footer text-center bg-white">
            <a asp-controller="Home" asp-action="Index" asp-route-date="" class="btn btn-primary btn-sm">
                Назад к расписанию
            </a>
            <a asp-action="Edit" asp-route-lessonId="@Model.Id" asp-route-date="" class="btn btn-outline-primary btn-sm">
                Редактировать
            </a>
            <a asp-action="Delete" asp-route-lessonId="@Model.Id" asp-route-date="" class="btn btn-danger btn-sm">
                Удалить
            </a>
        </div>
    </div>
</div>



