@model SubjectViewModel

<form id="addSubjectForm" asp-controller="Lesson" asp-action="AddSubject" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Name">Название предмета</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color">Цвет</label>
        <input asp-for="Color" type="color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
</form>
